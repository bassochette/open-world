{
  "name": "webeleon-node-typescript-starter",
  "version": "0.0.1",
  "description": "A generic starter for node js starter projects",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack serve --config webpack/webpack.dev.js",
    "build": "rimraf dist && webpack --config webpack/webpack.prod.js",
    "bundle": "npm run build",
    "serve": "serve dist",
    "format": "prettier --write '**/*.ts'",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --passWithNoTests",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Webeleon/node-typescript"
  },
  "bugs": {
    "url": "https://github.com/Webeleon/node-typescript/issues"
  },
  "contributors": [
    {
      "name": "Julien Prugne",
      "email": "julien@webeleon.dev"
    }
  ],
  "keywords": [
    "project starter",
    "webeleon",
    "node js",
    "typescript"
  ],
  "author": "Webeleon",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/jest": "27.0.1",
    "@types/sinon": "10.0.2",
    "copy-webpack-plugin": "9.0.1",
    "html-webpack-plugin": "5.3.2",
    "husky": "7.0.2",
    "jest": "27.1.1",
    "lint-staged": "11.1.2",
    "prettier": "2.4.0",
    "sinon": "11.1.2",
    "standard-version": "9.3.1",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.5",
    "typescript": "4.4.2",
    "webpack": "5.52.1",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "4.2.1",
    "webpack-merge": "5.8.0",
    "webpack-obfuscator": "3.4.1",
    "workbox-webpack-plugin": "6.3.0"
  },
  "lint-staged": {
    "src/**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "phaser": "^3.55.2"
  }
}
